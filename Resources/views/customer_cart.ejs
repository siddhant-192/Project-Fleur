          <main>
            
            <div class="basket">
              <div class="basket-labels">
                <ul>
                  <li class="item item-heading">Item</li>
                  <li class="price">Price</li>
                  <li class="quantity">Quantity</li>
                  <li class="subtotal">Subtotal</li>
                </ul>
              </div>
              <% for(let food of Object.values(session.cart.items)) { %>


              <div class="basket-product">
                <div class="item">
                  <div class="product-image">
                    <img src="<%= food.item.img%>" alt="food_image" class="product-frame">
                  </div>
                  <div class="product-details">
                    <h1><strong><span class="item-quantity"><%= food.qty%></span> x </strong> <%= food.item.name%></h1>
                    <p></p>
                    <p>Product Code - 00000000</p>
                  </div>
                </div>
                <div class="price"><%= food.item.price%></div>
                <div class="quantity">
                  <input type="number" value="4" min="1" class="quantity-field">
                </div>
                <div class="subtotal"><%= food.item.price * food.qty%></div>
                <div class="remove">
                  <button>Remove</button>
                </div>
              </div>

              <% } %>
              
            </div>
            <aside>
              <div class="summary">
                <div class="summary-total-items"><span class="total-items"></span> Items in your Bag</div>


                <div class="summary-total">
                  <div class="total-title">Total</div>
                  <div class="total-value final-value" id="basket-total"><%= session.cart.totalprice %></div>
                </div>
                <div class="summary-checkout">
                  <button class="checkout-cta">Go to Secure Checkout</button>
                </div>
                
              </div>
            </aside>
          </main>


